{
  "name": "inventory-manager",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dump-db": "pg_dump -U postgres -p 5432 -d inventorymanager -f db/dump/exports/invmanager.pgsql"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-session": "^1.17.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^8.0.2",
    "session-file-store": "^1.4.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run dump-db && git add ./db/dump/exports/invmanager.pgsql && git commit -m \"database dump added\" && sleep 1"
    }
  },
  "devDependencies": {
    "husky": "^4.2.5"
  }
}
